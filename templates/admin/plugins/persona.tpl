<div class="row">
	<div class="col-sm-2 col-xs-12 settings-header">Configuration du Theme</div>
	<div class="col-sm-10 col-xs-12">	
		<form role="form" class="persona-settings">
			<div class="checkbox">
				<label class="mdl-switch mdl-js-switch mdl-js-ripple-effect">
					<input class="mdl-switch__input" type="checkbox" id="hideSubCategories" name="hideSubCategories">
					<span class="mdl-switch__label"><strong>Cacher les sous catégories</strong></span>
				</label>
			</div>
			<div class="checkbox">
				<label class="mdl-switch mdl-js-switch mdl-js-ripple-effect">
					<input class="mdl-switch__input" type="checkbox" id="hideCategoryLastPost" name="hideCategoryLastPost">
					<span class="mdl-switch__label"><strong>Cacher les derniers messages des rubriques</strong></span>
				</label>
			</div>
			<div class="checkbox">
				<label class="mdl-switch mdl-js-switch mdl-js-ripple-effect">
					<input class="mdl-switch__input" type="checkbox" id="enableQuickReply" name="enableQuickReply">
					<span class="mdl-switch__label"><strong>Activer la réponse rapide</strong></span>
				</label>
			</div>
		</form>
	</div>
</div>
	
<button id="save" class="floating-button mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-button--colored">
    <i class="material-icons">save</i>
</button>